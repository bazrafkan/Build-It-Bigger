<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".JokeActivity">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/joke_activity_title_layout_marginHorizontal"
        android:layout_marginLeft="@dimen/joke_activity_title_layout_marginHorizontal"
        android:layout_marginTop="@dimen/joke_activity_title_layout_marginTop"
        android:text="@string/joke_is"
        android:textColor="@android:color/black"
        android:textSize="@dimen/joke_activity_title_textSize"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_joke"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/joke_activity_joke_layout_marginHorizontal"
        android:layout_marginLeft="@dimen/joke_activity_joke_layout_marginHorizontal"
        android:layout_marginTop="@dimen/joke_activity_joke_layout_marginVertical"
        android:layout_marginEnd="@dimen/joke_activity_joke_layout_marginHorizontal"
        android:layout_marginRight="@dimen/joke_activity_joke_layout_marginHorizontal"
        android:layout_marginBottom="@dimen/joke_activity_joke_layout_marginVertical"
        android:textSize="@dimen/joke_activity_joke_textSize"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"
        tools:text="Hello World!" />
</android.support.constraint.ConstraintLayout>